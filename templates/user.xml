<templateSet group="user">
  <template name="email-field" value="&#10;{{-- $VALUE$ Section::Start --}}&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;input type=&quot;email&quot; id=&quot;$NAME$&quot; name=&quot;$NAME$&quot; class=&quot;form-control $NAME$&quot; placeholder=&quot;Place Holder&quot;&gt;&#10;&lt;/div&gt;&#10;{{-- $VALUE$ Section::End--}}&#10;" description="Form Email  Field" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="text-field" value="&#10;{{-- $VALUE$ Section::Start --}}&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;input type=&quot;text&quot; id=&quot;$NAME$&quot; name=&quot;$NAME$&quot; class=&quot;form-control $NAME$&quot; placeholder=&quot;Place Holder&quot;&gt;&#10;&lt;/div&gt;&#10;{{-- $VALUE$ Section::End--}}&#10;" description="Form Text  Field" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="password-field" value="&#10;{{-- $VALUE$ Section::Start --}}&#10;&lt;div class=&quot;form-group&quot;&gt;&#10;    &lt;label for=&quot;$NAME$&quot;&gt;$VALUE$&lt;/label&gt;&#10;    &lt;input type=&quot;password&quot; id=&quot;$NAME$&quot; name=&quot;$NAME$&quot; class=&quot;form-control $NAME$&quot; placeholder=&quot;Place Holder&quot;&gt;&#10;&lt;/div&gt;&#10;{{-- $VALUE$ Section::End--}}&#10;" description="Form Password  Field" toReformat="true" toShortenFQNames="true">
    <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="VALUE" expression="capitalize(NAME)" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="con" value="public function __construct ($ARGS$)&#10;{&#10;    $END$&#10;}" description="__construct" toReformat="true" toShortenFQNames="true">
    <variable name="ARGS" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="PHP Class Member" value="true" />
    </context>
  </template>
  <template name="vue-template" value="&lt;template&gt;&#10;    &lt;div&gt;$FILENAME$&lt;/div&gt; &#10;&lt;/template&gt;&#10;&#10;&lt;script&gt;&#10;    export default {&#10;        name: &quot;$FILENAMEWITHDASHES$&quot;&#10;    }&#10;&lt;/script&gt;" description="Vue Basic Template" toReformat="false" toShortenFQNames="true">
    <variable name="FILENAME" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="FILENAMEWITHDASHES" expression="camelCase(fileNameWithoutExtension())" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="Vue" value="true" />
    </context>
  </template>
</templateSet>